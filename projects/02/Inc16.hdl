/**
 * 16-bit incrementer:
 * out = in + 1 (arithmetic addition)
 */

CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    Not16(in=in, out=notin);
    Add16(a=in, b=notin, out=out1);
    Add16(a=in, b=out1, out=out);
}